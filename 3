import java.util.*;

  class Main {
    public static void main(String[] args) {
    
    Scanner user_input = new Scanner(System.in);
    System.out.println("this will be a tool to help solve for equations using y=mx+b. Input m,x,and b respectively");
    
    String one = user_input.nextLine();

    String two = user_input.nextLine();

    String three = user_input.nextLine();

    System.out.println("y=" + one + "*" + two + "+" + three);

    
    String four = (one*two+three);

    System.out.println(four);
    }
  }


